@* // Pages/Shared/_Pagination.cshtml
@model DemoRazorPages_ShopDB.Pages.Shared.PaginationModel<object>

@{
    // Lấy các query params từ Model.Filter
    var queryParams = new Dictionary<string, string>();

    if (Model.Filter != null)
    {
        // Dùng reflection để lấy tất cả properties và giá trị
        var properties = Model.Filter.GetType().GetProperties();
        foreach (var prop in properties)
        {
            var value = prop.GetValue(Model.Filter);
            if (value != null)
            {
                // Xử lý các kiểu dữ liệu đặc biệt như DateTime
                if (value is DateTime dateValue)
                {
                    queryParams[prop.Name.ToLower()] = dateValue.ToString("yyyy-MM-dd");
                }
                else
                {
                    queryParams[prop.Name.ToLower()] = value.ToString();
                }
            }
        }
    }

    // Calculate page range to display
    int startPage = Math.Max(1, Model.PageIndex - 2);
    int endPage = Math.Min(Model.TotalPages, startPage + 4);

    // Adjust start page if we're near the end to always show 5 pages if possible
    if (endPage - startPage < 4 && startPage > 1)
    {
        startPage = Math.Max(1, endPage - 4);
    }
}

<div class="pagination-info">
    Showing page @Model.PageIndex of @Model.TotalPages
</div>

<nav aria-label="Page navigation" class="pagination-container">
    <div class="page-item @(Model.PageIndex == 1 ? "disabled" : "")">
        <a class="page-link" asp-route-pageIndex="1" asp-all-route-data="queryParams">First</a>
    </div>

    <div class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
        <a class="page-link" asp-route-pageIndex="@(Model.PageIndex - 1)" asp-all-route-data="queryParams">Previous</a>
    </div>

    @if (startPage > 1)
    {
        <div class="page-item">
            <span class="page-link ellipsis">...</span>
        </div>
    }

    @for (int i = startPage; i <= endPage; i++)
    {
        <div class="page-item @(i == Model.PageIndex ? "active" : "")">
            <a class="page-link" asp-route-pageIndex="@i" asp-all-route-data="queryParams">@i</a>
        </div>
    }

    @if (endPage < Model.TotalPages)
    {
        <div class="page-item">
            <span class="page-link ellipsis">...</span>
        </div>
    }

    <div class="page-item @(!Model.HasNextPage ? "disabled" : "")">
        <a class="page-link" asp-route-pageIndex="@(Model.PageIndex + 1)" asp-all-route-data="queryParams">Next</a>
    </div>

    <div class="page-item @(Model.PageIndex == Model.TotalPages ? "disabled" : "")">
        <a class="page-link" asp-route-pageIndex="@Model.TotalPages" asp-all-route-data="queryParams">Last</a>
    </div>
</nav>

<style>
    .pagination-info {
        margin: 10px 0;
        color: #666;
    }

    .pagination-container {
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 20px 0;
    }

    .page-item {
        margin: 0 3px;
    }

    .page-link {
        text-decoration: none;
        padding: 6px 12px;
        border: 1px solid #ddd;
        border-radius: 4px;
        color: #007bff;
        background-color: #fff;
        transition: all 0.2s ease;
    }

    .page-item.active .page-link {
        background-color: #007bff;
        color: white;
        border-color: #007bff;
    }

    .page-item.disabled .page-link {
        color: #aaa;
        cursor: not-allowed;
        background-color: #f8f9fa;
    }

    .page-link:hover:not(.disabled) {
        background-color: #e9ecef;
        border-color: #ddd;
    }

    .ellipsis {
        border: none;
        background: transparent;
        cursor: default;
    }
</style> *@

